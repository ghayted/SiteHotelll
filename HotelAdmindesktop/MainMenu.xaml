<Window x:Class="HotelAdmin.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Principal" Height="483" Width="828" Background="#f5f5f5">
    <Grid>
        <!-- En-tête -->
        <Border Background="#3b5998" Height="80" VerticalAlignment="Top">
            <TextBlock Text="Menu Principal" Foreground="White" FontSize="24" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Border>

        <!-- Contenu principal -->
        <StackPanel Margin="20,100,20,20" VerticalAlignment="Top" HorizontalAlignment="Center">
            <!-- Bouton Gestion des Clients -->
            <Button Content="Gérer les Clients" Width="200" Height="50" Background="#2196F3" Foreground="White" 
                    Click="OuvrirClientView_Click" />
            <Button Content="Gérer les Reservations" Width="200" Height="50" Background="#2196F3" Foreground="White" 
         Click="OuvrirReservationView_Click" />
            <Button Content="Gérer les Chambres" Width="200" Height="46" Click="OuvrirChambreView_Click" Background="#2196F3" Foreground="White" BorderBrush="#388E3C" BorderThickness="1"/>

        </StackPanel>
    </Grid>
</Window>