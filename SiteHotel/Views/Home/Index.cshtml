    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.85);
            padding: 8px 30px;
            transition: background-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
        }

            .navbar.scrolled {
                background: rgba(0, 0, 0, 0.95);
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            }

        .navbar-brand {
            font-size: 26px;
            font-weight: 600;
            color: #d4a054 !important;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: color 0.3s ease-in-out, transform 0.3s ease;
        }

            .navbar-brand:hover {
                color: #e6b87d !important;
                transform: scale(1.05);
            }

        .navbar-nav .nav-link {
            color: #fff !important;
            font-size: 15px;
            font-weight: 500;
            margin-right: 20px;
            letter-spacing: 0.7px;
            text-transform: uppercase;
            position: relative;
            transition: color 0.3s ease, transform 0.3s ease;
        }

            .navbar-nav .nav-link::after {
                content: "";
                position: absolute;
                left: 50%;
                bottom: -3px;
                width: 0;
                height: 2px;
                background-color: #d4a054;
                transition: width 0.3s ease, left 0.3s ease;
            }

            .navbar-nav .nav-link:hover::after {
                width: 100%;
                left: 0;
            }

            .navbar-nav .nav-link:hover {
                color: #d4a054 !important;
                transform: scale(1.02);
            }

        .navbar-toggler {
            border: none;
            outline: none;
            background-color: #d4a054;
            padding: 8px 12px;
            transition: background-color 0.3s ease;
        }

            .navbar-toggler:focus {
                box-shadow: none;
                background-color: #e6b87d;
            }

        .navbar-toggler {
            border: none;
            background-color: #d4a054;
            padding: 5px 10px;
            transition: background-color 0.3s ease;
        }

            .navbar-toggler:focus {
                box-shadow: none;
                background-color: #e6b87d;
            }

        /* Responsive Styles */

        /* Hero Section */
        .hero-section {
            height: 100vh;
            background: url('/image/img1.webp') no-repeat center center fixed;
            background-size: cover;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            text-align: center;
            color: #fff;
            z-index: 1;
            padding: 0 20px;
        }

            .hero-content h1 {
                font-size: 3rem;
                font-weight: bold;
                margin-bottom: 20px;
                animation: fadeInDown 1s ease;
            }

            .hero-content p {
                font-size: 1.2rem;
                margin-bottom: 30px;
                animation: fadeInUp 1s ease;
            }

            .hero-content .btn {
                font-size: 1rem;
                padding: 10px 20px;
                border-radius: 30px;
                background-color: #d4a054;
                border: none;
                color: #fff;
                text-transform: uppercase;
                font-weight: bold;
                transition: all 0.3s ease-in-out;
            }

                .hero-content .btn:hover {
                    background-color: #e6b87d;
                    transform: translateY(-3px);
                }

        /* Features Section */
        .features-section h2 {
            font-size: 36px;
            font-weight: bold;
            text-transform: uppercase;
            color: #333;
        }

        .features-section img {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease-in-out;
            width: 600px; /* Définir une largeur fixe pour toutes les images */
            height: 370px; /* Définir une hauteur fixe pour toutes les images */
            object-fit: cover; /* Assure que les images remplissent les dimensions sans déformation */
        }

            .features-section img:hover {
                transform: scale(1.02);
            }

        .features-section h3 {
            font-size: 24px;
            color: #d4a054;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .features-section p {
            font-size: 16px;
            line-height: 1.6;
            color: #666;
        }

        .features-section {
            margin-top: 95px; /* Ajoute de l'espace au-dessus de cette section */
            margin-bottom: 105px; /* Ajoute de l'espace sous cette section */
        }

        /* Footer amélioré */
        .footer {
            background: #111;
            color: #f1f1f1;
            padding: 40px 0;
            font-size: 14px;
        }

            .footer h5 {
                color: #d4a054;
                font-weight: 600;
            }

            .footer p, .footer li {
                color: #ccc;
            }

            .footer a {
                color: #d4a054;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: #e6b87d;
                    text-decoration: underline;
                }

            .footer .social-icons a {
                display: inline-block;
                margin: 0 10px;
                color: #d4a054;
                font-size: 18px;
                transition: transform 0.3s ease, color 0.3s ease;
            }

                .footer .social-icons a:hover {
                    color: #e6b87d;
                    transform: scale(1.2);
                }

            .footer ul {
                padding: 0;
                list-style: none;
            }

                .footer ul li {
                    margin-bottom: 8px;
                }



        .reservation-form-wrapper {
            position: absolute;
            bottom: 20px; /* Place le formulaire au-dessus de la section héro */
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(0, 0, 0, 0.7); /* Fond semi-transparent */
            border-radius: 10px;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .reservation-form .form-label {
            font-size: 14px;
        }

        .reservation-form .form-control,
        .reservation-form .form-select {
            background-color: #fff;
            border: none;
            border-radius: 5px;
            box-shadow: none;
        }

        .reservation-form .btn-warning {
            background-color: #d4a054;
            border: none;
            font-size: 14px;
            padding: 10px 0;
        }

        .gallery-section h2 {
            font-size: 32px;
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 40px;
            color: #333;
        }

        .gallery-section img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .gallery-section img:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            }

  


    </style>
</head>

